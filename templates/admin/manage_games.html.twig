<h1>Game Management</h1>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Release date</th>
        <th>Publisher</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for game in games %}
        <tr>
            <td>{{ game.title }}</td>
            <td>{{ game.releasedate|date('Y-m-d') }}</td>
            <td>{{ game.publisher }}</td>
            <td>{{ game.genre }}</td>
            <td>{{ game.price }}</td>
            <td>
                <a href="{{ path('game_remove', {'id': game.id}) }}">Remove game</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
