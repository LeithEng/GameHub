{% block title %}Checkout{% endblock %}

{% block body %}
    <h1>Checkout</h1>
    {% if items is not empty %}
        <table>
            <thead>
            <tr>
                <th>Game</th>
                <th>Price (in euros)</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.game.title }}</td>
                    <td>${{ item.game.price }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <h1>Total price in euros: {{ totalPrice }}</h1>
        <a href="{{ path('payment') }}" class="btn btn-primary">Proceed to payment</a>
    {% else %}
        <p>Your cart is empty.</p>
    {% endif %}

    <a href="{{ path('app_store') }}">Continue Shopping</a>
{% endblock %}
