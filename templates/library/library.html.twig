{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    {% include ('navbar/navbar.html.twig' )%}
    <h1>Your Library</h1>

    {% if libraryGames is not empty %}
        <ul>
            {% for entry in libraryGames %}
                <li>
                    {{ entry.title }}
                    <a href="{{ path('app_game', { title: entry.title }) }}">Go to the game's page</a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Your library is empty!</p>
    {% endif %}
{% endblock %}
